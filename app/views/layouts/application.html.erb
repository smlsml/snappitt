<!DOCTYPE html>
<html>
<head>
  <title><%= t('app.name') %></title>
  <%= stylesheet_link_tag('application') %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body class="<%= controller.css_name %>">

<div id="page_header">
  <%= render :partial => '/partials/header' %>
</div>

<div id="page_body">
  <%= render_flash_messages %>

  <%= render :partial => '/partials/signup' unless user_signed_in? || controller.is_account_page? %>

  <div id="page_content">
    <%= yield %>
  </div>
</div>

<div id="page_footer">
  <%= render :partial => '/partials/footer' %>
</div>

</body>
</html>
