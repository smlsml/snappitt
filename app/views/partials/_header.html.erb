<h1><%= t('app.name') %></h1>

<% @in = user_signed_in? %>

<ul>
 <li>
   <a href="<%= root_path %>"<%= nav_class(:home) %>>
     <span><%= t('nav.home') %></span>
   </a>
 </li>
 <li>
   <a href="<%= @in ? user_path(current_user) : root_path %>"<%= nav_class(:me) %>>
     <span><%= t('nav.me') %></span>
   </a>
 </li>
 <li>
   <a href="<%= @in ? new_experience_path : root_path %>"<%= nav_class(:upload) %>>
     <span><%= t('nav.upload') %></span>
   </a>
 </li>
 <li>
   <a href="<%= @in ? user_network_path(current_user) : root_path %>"<%= nav_class(:users_network) %>>
     <span><%= t('nav.network') %></span>
   </a>
 </li>
 <li>
   <a href="<%= @in ? user_settings_path(current_user) : root_path %>"<%= nav_class(:users_settings) %>>
     <span><%= t('nav.settings') %></span>
   </a>
 </li>
</ul>

<% if @in %>

<div id="page_logout">
  <%= link_to t('nav.logout'), destroy_user_session_path %>
</div>

<% end %>